@model IEnumerable<UserVM>

@{
    ViewData["Title"] = "Users";
}


 
<h2>Users</h2>
<a class="btn btn-info text-white " asp-action="Create">Add New User </a>


<table class="tabel table-striped mt-4  " >
    <thead>
        <tr class="bg-primary text-white ">
            <th class="p-2 text-center">First Name</th>
            <th class="p-2 text-center">Last Name</th>
            <th class="p-2 text-center">User Name</th>
            <th class="p-2 text-center">Email</th>
            <th class="p-2 text-center">Roles</th>
            <th class="p-2 text-center">Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@string.Join(" , ",item.Roles.ToList())</td>
                <td class="p-2 text-center">
                    <a class="btn btn-info btn-sm" asp-route-userId="@item.Id" asp-action="ManageRoles" asp-controller="Users">Manage Role</a>
                 
                </td>
            </tr>
        }
    </tbody>
</table>